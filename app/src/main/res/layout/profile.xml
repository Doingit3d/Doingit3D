<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_perfil_activo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perfil_activo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_disenio_impresion_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="bold"
            tools:text="@string/disenio_impresion_scanner" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contratista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/como_contratista" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="70sp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trabajador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/como_trabajador" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>