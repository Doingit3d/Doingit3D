<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cada_pro_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="@dimen/fab_margin">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cada_pro_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_perfil" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.35">

            <TextView
                android:id="@+id/cada_pro_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del proyecto"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cada_pro_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="publicado por @user"
                />

            <TextView
                android:id="@+id/cada_pro_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.63">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/menu_black" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>