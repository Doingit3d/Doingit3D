<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_reutilizable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_contratista"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/logo_d3d_small_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/reputacion" />

                <RatingBar
                    android:id="@+id/ratingBar_contratista"
                    android:isIndicator="false"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:numStars="5"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        app:srcCompat="@drawable/dashboard_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Título provisional" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/proyectos_presentados"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/proyectos_presentados" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/proyectos_finalizados"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/proyectos_finalizados" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/proyectos_nulos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/proyectos_nulos" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/pendientes_de_adjudicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/pendientes_de_adjudicacion" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.02"
                        app:srcCompat="@drawable/trophy_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Título provisional" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/ofertas_presentadas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/ofertas_presentadas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/ofertas_pendientes_de_adjudicar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/ofertas_pendientes_de_adjudicar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/trabajos_adjudicados"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/trabajos_adjudicados" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/trabajos_no_adjudicados"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.07"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/trabajos_no_adjudicados" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>